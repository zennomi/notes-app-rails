
  <div class='pt-2'>
    <%= form_with(model: [@notebook, @page, @paragraph], html: { class: 'float-left mr-1' }) do |form| %>
      <%= button_tag(class: "btn btn-toolbar") do %>
        <i class='fas fa-paragraph'></i>
      <% end %>
    <% end %>
    <%= form_with(model: [@notebook, @page, @image_element], html: { class: 'float-left mr-1' }) do |form| %>
      <%= button_tag(class: "btn btn-toolbar") do %>
        <i class='fas fa-image'></i>
      <% end %>
    <% end %>
    <%= form_with(model: [@notebook, @page, @checklist], html: { class: 'float-left mr-1' }) do |form| %>
      <%= button_tag(class: "btn btn-toolbar") do %>
        <i class='fas fa-list'></i>
      <% end %>
    <% end %>
    <%= link_to edit_notebook_page_path(@notebook, @page), class: 'btn btn-toolbar' do %>
      <i class='fas fa-edit'></i>
    <% end %>
  </div>

<header class="page-header page-header-dark bg-gradient-primary-to-secondary mb-2">
  <div class="container-xl px-4">
    <div class="page-header-content pt-4">
      <div class="row align-items-center justify-content-between">
        <div class="col-auto mt-4">
          <h1 class="page-header-title">
            <div class="page-header-icon"><i data-feather="file"></i></div>
            <%= @page.title %>
          </h1>
          <div class="page-header-subtitle">Use this blank page as a starting point for creating new pages inside your project!</div>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="card">
    <div class="card-content">
      <%= render @page.elements %>
    </div>
  </div>
</div>
