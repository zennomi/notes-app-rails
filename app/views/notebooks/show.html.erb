<header class="page-header page-header-dark bg-gradient-primary-to-secondary">
  <div class="container-xl px-4">
    <div class="page-header-content pt-4">
      <div class="row align-items-center justify-content-between">
        <div class="col-auto mt-4">
          <h1 class="page-header-title">
            <div class="page-header-icon"><i class="fa-regular fa-file"></i></div>
            <%= @notebook.title %>
          </h1>
          <div class="page-header-subtitle">Use this blank page as a starting point for creating new pages inside your project!</div>
        </div>
      </div>
    </div>
  </div>
</header>
<h3 class='mb-4'>
  <%= link_to 'Edit', edit_notebook_path(@notebook), class: 'btn btn-outline-primary' %>
</h3>
<h5 class='d-flex justify-content-between'>
  <span>Pages</span>
  <%= link_to 'New Page', new_notebook_page_path(@notebook), class: 'btn btn-primary' %>
</h5>
<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @notebook.pages.each do |page| %>
      <tr>
        <td><%= page.position %></td>
        <td><%= link_to page.title, notebook_page_path(@notebook, page) %></td>
        <td><%= link_to 'Edit', edit_notebook_page_path(@notebook, page) %></td>
        <td><%= link_to 'Destroy', notebook_page_path(@notebook, page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
