<header class="page-header page-header-dark bg-gradient-primary-to-secondary mb-2">
  <div class="container-xl px-4">
    <div class="page-header-content pt-4">
      <div class="row align-items-center justify-content-between">
        <div class="col-auto mt-4">
          <h1 class="page-header-title">
            <div class="page-header-icon"><i class="fa-solid fa-books"></i></div>
            Notebooks
          </h1>
          <div class="page-header-subtitle"><%= @notebooks.count %> notebooks</div>
        </div>
        <div class="col-auto mt-4">
          <%= link_to 'New Notebook', new_notebook_path, class: 'btn btn-light' %>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="row">
    <% @notebooks.each do |notebook| %>
      <div class="col-md-4">
        <div class="card notebook-card mb-3">
          <div class="card-body">
            <h5 class='card-title d-flex justify-content-between'>
              <%= link_to notebook.title, notebook %>
              <div class="dropdown">
                <button class="btn btn-light" id="dropdownMenuButton" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-ellipsis-h"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right animated--fade-in-up" aria-labelledby="dropdownMenuButton">
                  <%= link_to 'Edit', edit_notebook_path(notebook), class: 'dropdown-item' %>
                  <div class="dropdown-divider m-0"></div>
                  <%= link_to 'Delete', notebook, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %>
                </div>
              </div>
            </h5>
            <div class="stats mb-4">
              <p class='page-count'><%= notebook.pages.count %> pages</p>
              <p class='started'>Created <%= time_ago_in_words(notebook.created_at) %> ago</p>
            </div>
            <%= link_to "View", notebook, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
